            android:layout_width="0px"
            android:layout_weight="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:inputType="numberDecimal"/>


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
