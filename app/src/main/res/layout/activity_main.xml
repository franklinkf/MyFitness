    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="4"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvYoga"
            android:layout_width="0px"
